# ===================================
# Student App Environment Variables
# ===================================

# Generate PAYMENT_TOKEN_SECRET with:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# IMPORTANT: Use the SAME secret in both admin and student apps
PAYMENT_TOKEN_SECRET=

# Razorpay Credentials
RAZORPAY_KEY_ID=rzp_test_
RAZORPAY_KEY_SECRET=

# Supabase (Server-side)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=

# Supabase (Client-side - Public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Firebase Admin SDK (for auth verification)
FIREBASE_SERVICE_ACCOUNT_JSON=
# OR use discrete variables:
# FIREBASE_PROJECT_ID=
# FIREBASE_CLIENT_EMAIL=
# FIREBASE_PRIVATE_KEY=

# Session Secret (for middleware cookie signing)
SESSION_SECRET=

# Base URL (for email links)
APP_BASE_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=https://neramclasses.com

# ===================================
# Email Configuration (Nodemailer)
# ===================================
# SMTP Server Configuration
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@neramclasses.com
SMTP_PASS=your_email_password

# Email Sender Address
MAIL_FROM=noreply@neramclasses.com
FROM_EMAIL=noreply@neramclasses.com
